# What can be configured:#
#   name: software collection name with namespace, e.g. httpd24-rh
#   gituser: name of github user or organization
#   gitproject: name of a repository to test
#   job_prefix: container jobs: in ci.centos.org have to be prefixed with SCLo-container
#   (defines also used OS)    | in internal Jenkins have prefix rhscl-images
#   targetOS: value of TARGET variable for make (see https://github.com/sclorg/container-common-scripts)
#   not_automatic: false if run should start automatically for sclorg/ org members
#   trigger_phrase: what phase can trigger this job - '.*\[{trigger_phrase}\].*'
#   project_trigger: what project triggers new run
#   hub_namespace: namespace where to put new image in Docker Hub
- project:
    name: %SCL%-%NAMESPACE%
    gitproject: %GITPROJECT%
    gituser: %GITUSER%
    jobs:
        - '{job_prefix}-{name}':
            job_prefix: 'SCLo-container'
            targetOS: 'centos7'
            context: 'centos7'
            not_automatic: false
            trigger_phrase: 'test'
        - '{job_prefix}-{name}':
            job_prefix: 'rhscl-images'
            targetOS: 'rhel7'
            context: 'rhel7'
            not_automatic: false
            trigger_phrase: 'test'
        - '{job_prefix}-{name}-build':
            job_prefix: 'rhscl-images'
            project_trigger: '%TRIGGER%'
            hub_namespace: '%HUB_NAMESPACE%'
            context: 'centos7'
        - '{job_prefix}-{name}':
            job_prefix: 'SCLo-container'
            name: '%SCL%-%NAMESPACE%-openshift'
            targetOS: 'centos7'
            context: 'centos7 - openshift'
            not_automatic: true
            trigger_phrase: 'test-openshift'
        - '{job_prefix}-{name}':
            job_prefix: 'rhscl-images'
            name: '%SCL%-%NAMESPACE%-openshift'
            targetOS: 'rhel7'
            context: 'rhel7 - openshift'
            not_automatic: true
            trigger_phrase: 'test-openshift'
        - '{job_prefix}-{name}':
            job_prefix: 'rhscl-images'
            name: '%SCL%-%NAMESPACE%-rhel7-openshift-4'
            targetOS: 'rhel7'
            context: 'rhel7 - openshift - 4'
            not_automatic: true
            trigger_phrase: 'test-openshift-4'
        - '{job_prefix}-{name}':
            job_prefix: 'SCLo-container'
            name: '%SCL%-%NAMESPACE%-fedora'
            targetOS: 'fedora'
            context: 'fedora'
            not_automatic: false
            trigger_phrase: 'test'
        - '{job_prefix}-{name}':
            name: '%SCL%-%NAMESPACE%-rhel8'
            job_prefix: 'rhscl-images'
            targetOS: 'rhel8'
            context: 'rhel8'
            not_automatic: false
            trigger_phrase: 'test'
        - '{job_prefix}-{name}':
            job_prefix: 'rhscl-images'
            name: '%SCL%-%NAMESPACE%-rhel8-openshift-4'
            targetOS: 'rhel8'
            context: 'rhel8 - openshift - 4'
            not_automatic: true
            trigger_phrase: 'test-openshift-4'
